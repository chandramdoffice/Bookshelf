<h1>Editing book</h1>

<%= form_for :@book, url: book_path(@book), method: :patch do |f| %>

<p>
    <%= f.label :booktitle %><br>
    <%= f.text_field :booktitle %>
  </p>
 
  <p>
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </p>
  
   <p>
    <%= f.label :rating %><br>
    <%= f.text_area :rating %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
<%= link_to 'Back', books_path %>